<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

  <div id="task-app" class="App-box">

    <h1 class="heading">TO-DO App</h1>
    <form action="/create-contact" method="POST">

      <div class="input-fields">
        <div class="input-1">
          <label for="">DESCRIPTION</label><br>
          <input type="text" style="width: 70%" name="description" placeholder="What do you need to do?" required>
        </div>
        <div class="input-2">
          <div class="input-select">
            <label for="">CATEGORY</label><br>
            <select class="form-select" name="category">
              <option selected>Choose a category</option>
              <option value="Personal">Personal</option>
              <option value="Work">Work</option>
              <option value="School">School</option>
              <option value="Cleaning">Cleaning</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="input-date">
            <label for="">DUE DATE</label><br>
            <input type="date" name="dueDate" placeholder="dd/mm/yyyy" required>
          </div>
        </div>
      </div>

      <div class="input-button">
        <button type="submit" class="btn btn-dark btn-lg" name="add">+ ADD TASK</button>
        <!-- <button type="submit" class="btn btn-danger btn-lg" name="remove"><i class="fas fa-trash-alt"></i> DELETE TASKS</button> -->
      </div>

    </form>

    <ul class="list-items">
      <% for (let i of task_list) { %>
      <div class="task">
        <li>
          <div class="o-box"><span class="category-box box"><%= i.category %></span></div>
          <div class="o-box">
            <div class="delete-item">
              <a href="/delete-contact/?id=<%= i._id %>">
                <i class="fas fa-calendar-times"></i>
              </a>
            </div>
          </div>
          <p><%= i.description %></p>
          <p><i class="fas fa-calendar-alt"></i>&nbsp&nbsp <%= i.date %></p>
        </li>
      </div>

      <% } %>
    </ul>

  </div>

  <script type="text/javascript" src="/js/home.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>

</html>
